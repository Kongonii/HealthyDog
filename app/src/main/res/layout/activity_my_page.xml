<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="812dp"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:scrollbarSize="10dp"
    android:scrollbarThumbVertical="@color/colorPrimaryDark"
    tools:context=".MyPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="812dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginRight="15dp"
            android:scaleType="center"
            app:srcCompat="@drawable/profile1" />

        <ImageView
            android:id="@+id/profile_pic1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-45dp"
            app:srcCompat="@drawable/profile_pic1" />

        <TextView
            android:id="@+id/name_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:text="반려동물의 이름을 입력하세요."
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="이름 입력"
            android:font="@font/gowundodum"
            android:textColor="#9A9696"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Spinner
                android:id="@+id/spinner_year1"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:fontFamily="@font/gowundodum"
                android:minHeight="45dp"
                android:textAlignment="center"
                tools:ignore="SpeakableTextPresentCheck" />

            <Spinner
                android:id="@+id/spinner_month1"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/gowundodum"
                android:textAlignment="center"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <Spinner
                android:id="@+id/spinner_day1"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/gowundodum"
                android:textAlignment="center"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <TextView
            android:id="@+id/birth_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-90dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="반려동물의 생일은 언제인가요?"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/type_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="반려동물의 견종을 선택하세요."
            android:textColor="#000000"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_type1"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginLeft="100dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/gender_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="반려동물의 성별과 중성화 여부를 선택하세요."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginLeft="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/female_1"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/button_background_color"
                android:fontFamily="@font/gowundodum"
                android:background="@drawable/radius"
                android:layout_marginRight="5dp"
                android:text="여" />

            <Button
                android:id="@+id/male_1"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:fontFamily="@font/gowundodum"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/button_background_color"
                android:layout_marginRight="5dp"
                android:background="@drawable/radius"
                android:text="남" />

            <Spinner
                android:id="@+id/spinner_gender1"
                android:layout_width="100dp"









                android:fontFamily="@font/gowundodum"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:minHeight="48dp"
                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>

        <TextView
            android:id="@+id/walk_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="반려동물의 하루 평균 산책 시간을 입력하세요."
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="140dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:text="산책 시간"
                android:textColor="#9A9696"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="(분)" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-550dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="반려동물\n 프로필 사진 등록"
            android:textColor="#9A9696"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/memo_1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="550dp"
            android:gravity="center"
            android:text="비만도는 마이페이지에서 간단하게 확인해 보세요!"
            android:textColor="#9A9696" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constrainStart_toStartOf="parent"
            app:layout_constrainEnd_toEndof="parent"
            app:layout_constraintTop_tpTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelVisibilityMode="unlabeled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_nav_menu"
            app:itemBackground="@color/bottom"/>



    </LinearLayout>

</ScrollView>